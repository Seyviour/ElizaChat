<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtReceivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_bubble"
        android:maxWidth="240dp"
        android:padding="15dp"
        android:elevation="5dp"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="this is a message"/>

    <TextView
        android:id="@+id/txtTimeReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12:00 PM"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtReceivedMessage"
        app:layout_constraintLeft_toRightOf = "@+id/txtReceivedMessage"/>
</androidx.constraintlayout.widget.ConstraintLayout>